<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item
    android:state_enabled="true"
    android:state_pressed="true">
<layer-list >

  <item>
	<shape>
	   <stroke android:width="1dp" android:color="@color/text_light_gray"/>
       <solid android:color="@color/white" />
	</shape>
  </item>
  <item>
    <shape>
      <solid android:color="@color/blackoverlay_30" />
    </shape>
  </item>
</layer-list>
</item>

<item 
    android:state_enabled="true">
	<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
        <shape>
            <padding android:top="0.5dp" android:right="0.8dp" android:bottom="0.7dp" android:left="0.5dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    <item>
	<shape>
	   <stroke android:width="1dp" android:color="@color/text_light_gray"/>
       <solid android:color="@color/white" />
	</shape>
    </item>
</layer-list>
</item>
</selector>