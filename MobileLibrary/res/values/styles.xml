<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/blue</item> <!-- Indigo_colorPrimaryDark -->
        <item name="colorPrimary">@color/Indigo_colorPrimary</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Univt</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="bookdetail_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal" />



    <style name="ApplicationActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_big_edittext_view</item>
        <item name="android:height">@dimen/action_bar_height</item>
    </style>

    <!-- <style name="TabsBar" parent="@style/AppTheme" /> -->


    <style name="SplashLoginButton" parent="ApplicationButton">
        <item name="android:background">@drawable/button_login_splash</item>
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>
    
    <style name="ApplicationButton" parent="ApplicationButton">
        <item name="android:background">@drawable/button_register_splash</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_default_regular</item>
    </style>

    <style name="BuyButton">
        <item name="android:background">@drawable/button_register_splash</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegisterButton" parent="ApplicationButton">
        <item name="android:background">@drawable/button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/splash_view_register_button_width</item>
    </style>

    <style name="DefaultViewLayot">
        <item name="android:paddingLeft">@dimen/layout_default_left_space</item>
        <item name="android:paddingRight">@dimen/layout_default_left_space</item>
    </style>

    <style name="LectureDefaultLayout">
        <item name="android:paddingLeft">@dimen/lecture_default_padding</item>
        <item name="android:paddingRight">@dimen/lecture_default_padding</item>
    </style>

    <style name="TitleContentSections" parent="DefaultViewLayot">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/separator_bars_grey</item>
        <item name="android:minHeight">@dimen/title_content_section_height</item>
        <item name="android:textSize">@dimen/text_size_default_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GridViewTitleSection" parent="DefaultViewLayot">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/button_border</item>
        <item name="android:textSize">@dimen/text_size_default_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultListView" parent="@android:style/Widget.ListView">
        <item name="android:textSize">@dimen/text_size_default_regular</item>
        <item name="android:background">@color/light_gray_bg</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/button_sectiondevider_tabbar</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:footerDividersEnabled">true</item>
    </style>

    <style name="ItemViewCourse" parent="DefaultViewLayot">
        <item name="android:minHeight">@dimen/listview_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_default_regular</item>
        <item name="android:paddingTop">@dimen/listitem_space_top_bottom</item>
        <item name="android:paddingBottom">@dimen/listitem_space_top_bottom</item>
        <item name="android:maxLines">1</item>
        <!-- 20140414  Changed the max lines from 2 to 1 -->
        <!-- <item name="android:maxLines">2</item> -->
        <item name="android:background">@color/light_gray_bg</item>
        <item name="android:ellipsize">end</item>
        <item name="android:footerDividersEnabled">true</item>
    </style>

    <style name="ItemViewCourseBasic">
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_default_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:paddingRight">@dimen/layout_default_left_space</item>
    </style>

    <style name="CourseTitle" parent="LectureTitle">
        <item name="android:paddingLeft">@dimen/layout_default_left_space</item>
        <item name="android:paddingRight">@dimen/layout_default_left_space</item>
    </style>

    <style name="LectureTitle">
        <item name="android:minHeight">@dimen/listview_item_height</item>
        <!-- <item name="android:textSize">@dimen/text_size_big_regular</item> -->
        <item name="android:textSize">@dimen/text_size_default_regular</item>
        <item name="android:background">@color/light_gray_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">@dimen/listitem_space_top_bottom</item>
        <item name="android:paddingBottom">@dimen/listitem_space_top_bottom</item>
    </style>

    <style name="NoCoursesContent" parent="DefaultViewLayot">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NoCoursesContentTitle" parent="NoCoursesContent">
        <item name="android:layout_marginTop">@dimen/listview_item_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">13sp</item>
    </style>

    <style name="DrawerListView">
        <item name="android:gravity">start</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:background">@color/drawer_bg</item>
        <item name="android:divider">@color/drawer_devider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="DefaultEditView">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_big_edittext_view</item>
    </style>

    <!-- the theme applied to the application or activity -->

    <style name="GridViewStyle">
        <item name="android:background">@color/light_gray_bg</item>
        <item name="android:verticalSpacing">@dimen/grid_grid_space</item>
        <item name="android:horizontalSpacing">@dimen/grid_grid_space</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="DefaultGridItemView" parent="@android:style/Widget.GridView">
        <item name="android:textSize">@dimen/text_size_default_regular</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/gridview_left_right_space</item>
        <item name="android:paddingRight">@dimen/gridview_left_right_space</item>
    </style>

    <style name="GridViewItemView">
        <item name="android:background">@drawable/grid_view_shadow_box</item>
    </style>

    <style name="CourseLevelGridItemView" parent="DefaultGridItemView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="RatingBarSmallAppTheme" parent="android:Widget.Holo.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small</item>
    </style>

    <style name="TitleHeader">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="ThemeDialogCustom">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="ActionBarTabStyle.Univt" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_univt</item>
    </style>

    <style name="Tab">
        <item name="android:gravity">center_horizontal</item>
        <!--    <item name="android:paddingLeft">16dip</item>
           <item name="android:paddingRight">16dip</item>   -->

        <item name="android:background">@drawable/tab_indicator_ab_univt</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
        <item name="android:height">@dimen/tab_host_default_height</item>
        <item name="android:minHeight">@dimen/tab_host_default_height</item>
    </style>

    <style name="TabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="CourseDetailTitle">
        <item name="android:textSize">@dimen/text_size_default_normal_regular</item>
        <item name="android:paddingTop">@dimen/space_extra_large</item>

    </style>

    <style name="CourseDetailText">
        <item name="android:textSize">@dimen/text_size_default_normal_regular</item>
        <item name="android:paddingTop">@dimen/space_small</item>

    </style>

    <style name="PlaceholderImageStyle">
        <item name="android:src">@drawable/ic_place1</item>
    </style>


    <style name="GridViewTileBox">
        <item name="android:background">@drawable/selector_tile_box</item>
    </style>
</resources>
