<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/authentication_status"
        layout="@layout/authentication_progress"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/authentication_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/light_gray_bg"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/form_margin"
            android:layout_marginRight="@dimen/form_margin"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/scrollview_space"
            android:paddingTop="@dimen/facebook_button_top_space"
            android:weightSum="1">

            <EditText
                android:id="@+id/email"
                style="@style/EmailEditTextView"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/devices_bottom_space" />

            <EditText
                android:id="@+id/password"
                style="@style/PasswordEditView"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/authentication_edittext_bottom_space"
                android:layout_marginTop="@dimen/edittext_between_space"
                android:imeActionId="@+id/authentication_button"
                android:imeActionLabel="@string/action_register"
                android:imeOptions="actionGo" />

            <Button
                android:id="@+id/authentication_button"
                style="@style/LoginButton"
                android:onClick="attemptAuthenticate"
                android:text="@string/action_register"
                android:layout_weight="0.08"
                android:layout_width="269dp" />

       
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/progress"
        layout="@layout/progress"
        android:visibility="gone" />

    <include layout="@layout/custom_toolbar"/>
    
</RelativeLayout>