<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" >

    <View
        android:id="@+id/drawer_active_section"
        android:layout_width="@dimen/listitem_indicator_width"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:layout_marginRight="@dimen/listitem_indicator_right_space" 
        android:visibility="invisible"/>
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listview_item_height"
  		android:src="@drawable/ic_pencil"
        android:contentDescription="@string/desc_list_item_icon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white" 
        android:layout_marginLeft="@dimen/layout_default_left_space"
        android:textSize="@dimen/text_size_default_regular"/>

</LinearLayout>