<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.master.univt">

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
    
    <application
        android:name="com.master.univt.support.GlobalApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.master.univt.ui.SplashActivity_"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.master.univt.ui.LoginActivity_"
            android:label="Login" >
        </activity>

        <activity
            android:name="com.master.univt.ui.RegisterActivity_"
            android:label="@string/action_register" />
      

        
        <activity android:name="com.master.univt.ui.search.MainActivity_">

        </activity>

        <activity
            android:name=".ui.detail.BookDetailActivity_"
            android:label="@string/bookDetail" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
